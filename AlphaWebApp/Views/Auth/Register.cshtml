@using Domain.Models
@model UserRegistrationForm;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}

<div class="center-screen">
    <div class="surface">

        <h1 class="create-account-title">Create Account</h1>

        <form asp-action="Register" asp-controller="Auth" class="form" method="post" novalidate enctype="multipart/form-data">

            @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag?.ErrorMessage
                </div>
            }

            <div class="shrink">
                <div class="input-group">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-input" value="@Model?.FirstName">
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="input-group">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-input" value="@Model?.LastName">
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>

            <div class="input-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-input" value="@Model?.Email">
                <span asp-validation-for="Email"></span>
            </div>

            <div class="shrink">
                <div class="input-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-input" value="@Model?.Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="input-group">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-input" value="@Model?.ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <div class="terms">
                <input asp-for="AcceptTerms" type="checkbox"> <span>I accept</span> <a asp-action="#">Terms and Conditions</a>
                <span asp-validation-for="AcceptTerms"></span>
            </div>

            <button type="submit" class="btn btn-register-login">Create Account</button>
        </form>

        <div class="account-already">
            <p>Already have an account?</p><a asp-controller="Auth" asp-action="Login">Login</a>
        </div>
    </div>
</div>
@await Html.PartialAsync("_ValidationScripts")
