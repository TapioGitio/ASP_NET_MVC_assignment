@model RegisterViewModel;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}

<div class="center-screen">
    <div class="surface">

        <h1 class="create-account-title">Create Account</h1>

        <form class="form" method="post" novalidate>

            <div class="input-group">
                <label asp-for="FormData.FirstName" class="form-label"></label>
                <input asp-for="FormData.FirstName" class="form-input" value="@Model?.FormData?.FirstName">
                <span asp-validation-for="FormData.FirstName"></span>
            </div>
            <div class="input-group">
                <label asp-for="FormData.LastName" class="form-label"></label>
                <input asp-for="FormData.LastName" class="form-input" value="@Model?.FormData?.LastName">
                <span asp-validation-for="FormData.LastName"></span>
            </div>
            <div class="input-group">
                <label asp-for="FormData.Email" class="form-label"></label>
                <input asp-for="FormData.Email" class="form-input" value="@Model?.FormData?.Email">
                <span asp-validation-for="FormData.Email"></span>
            </div>
            <div class="input-group">
                <label asp-for="FormData.Password" class="form-label"></label>
                <input asp-for="FormData.Password" class="form-input" value="@Model?.FormData?.Password">
                <span asp-validation-for="FormData.Password"></span>
            </div>
            <div class="input-group">
                <label asp-for="FormData.ConfirmPassword" class="form-label"></label>
                <input asp-for="FormData.ConfirmPassword" class="form-input" value="@Model?.FormData?.ConfirmPassword">
                <span asp-validation-for="FormData.ConfirmPassword"></span>
            </div>

            <div class="terms">
                <input asp-for="FormData.AcceptTerms" type="checkbox"> <span>I accept</span> <a asp-action="#">Terms and Conditions</a>
                <span asp-validation-for="FormData.AcceptTerms"></span>
            </div>

            <button type="submit" class="btn btn-register-login">Create Account</button>
        </form>

        <div class="account-already">
            <p>Already have an account?</p><a asp-controller="Auth" asp-action="Login">Login</a>
        </div>
    </div>
</div>
@await Html.PartialAsync("_ValidationScripts")
