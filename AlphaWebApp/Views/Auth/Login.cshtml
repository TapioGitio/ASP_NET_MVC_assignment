@model UserLoginForm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<div class="center-screen">
    <div class="surface">

        <h1 class="create-account-title">Login</h1>

        <form asp-controller="Auth" asp-action="ExternalLogin" class="form" method="post" novalidate>
            <input name="returnUrl" value="@ViewBag.ReturnUrl" hidden />

            <button type="submit" name="provider" value="Google" class="btn btn-external-login">
                <img src="~/images/google-icon.svg" alt="Google-Icon" />
                Login with Google
            </button>

            <div class="text-line">
                <span>OR</span>
            </div>
        </form>

        <form asp-controller="Auth" asp-action="Login" class="form" method="post" novalidate>

            @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag?.ErrorMessage
                </div>
            }

            <div class="shrink">
                <div class="input-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-input body-regular">
                </div>
                <div class="input-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-input body-regular">
                </div>
            </div>


            <div class="terms">
                <input asp-for="RememberMe" type="checkbox"> <span>Remember me</span>
            </div>

            <button type="submit" class="btn btn-register-login">Log in</button>
        </form>

        <div class="account-already">
            <p>Don't have an account?</p> <a asp-controller="Auth" asp-action="Register">Sign up</a>
        </div>

    </div>
</div>
@await Html.PartialAsync("_ValidationScripts")"_ValidationScripts")