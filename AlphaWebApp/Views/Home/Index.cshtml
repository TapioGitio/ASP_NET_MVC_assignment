@{
	ViewData["Title"] = "Register";
}


<form class="form container">
    <h1 class="create-account-title">Create Account</h1>

    <div class="input-group">
        <label class="form-label">First Name</label>
        <input type="text" placeholder="Enter Information" class="form-input body-regular">
    </div>
    <div class="input-group">
        <label class="form-label">Last Name</label>
        <input type="text" placeholder="Enter Information" class="form-input body-regular">
    </div>
    <div class="input-group">
        <label class="form-label">Email</label>
        <input type="text" placeholder="Enter Information" class="form-input body-regular">
    </div>
    <div class="input-group">
        <label class="form-label">Password</label>
        <input type="text" placeholder="Enter Information" class="form-input body-regular">
    </div>
    <div class="input-group">
        <label class="form-label">Confirm Password</label>
        <input type="text" placeholder="Enter Information" class="form-input body-regular">
    </div>

    <div class="terms">
        <input type="checkbox"> <span>I accept</span> <a>Terms and Conditions</a>
    </div>

    <a class="btn-primary btn-register-login">Create Account</a>

    <div class="flex account-already">
        <p>Already have an account?</p><a>Login</a>
    </div>
</form>
