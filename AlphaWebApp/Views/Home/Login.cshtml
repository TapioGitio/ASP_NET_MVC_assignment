@{
	ViewData["Title"] = "Login";
}

<form class="form container">
    <h1 class="create-account-title">Log in</h1>

    <div class="input-group">
        <label class="form-label">Email</label>
        <input type="text" placeholder="Enter email" class="form-input body-regular">
    </div>
    <div class="input-group">
        <label class="form-label">Password</label>
        <input type="password" placeholder="Enter password" class="form-input body-regular">
    </div>

    <div class="terms">
        <input type="checkbox"> <span>Remember me</span>
    </div>

    <a class="btn-primary btn-register-login">Log in</a>

    <div class="flex account-already">
        <p>Don't have an account?</p><a asp-controller="Home" asp-action="Index">Sign up</a>
    </div>
</form>