@model ProjectViewModel

<div id="removeProjectModal" class="modal">
    <div class="modal-content">

        <div class="modal-header">
            <h3>Delete Project</h3>
            <button class="btn-exit" data-close="true">
                <i class="bi bi-x"></i>
            </button>
        </div>

        <form asp-controller="Project" asp-action="Remove" enctype="multipart/form-data" method="post" novalidate>

            <input asp-for="UpdateFormData.Id" name="UpdateFormData.Id" hidden />
			<p>Are you sure you want to delete this project?</p>
            <button type="submit" class="btn btn-delete">Delete</button>

        </form>
    </div>
</div>
