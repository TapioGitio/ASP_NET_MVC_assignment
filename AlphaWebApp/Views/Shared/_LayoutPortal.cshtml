<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        @(string.IsNullOrEmpty(ViewData["Title"] as string) ? "Alpha Inc." : ViewData["Title"] + " - Alpha Inc.")
    </title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel ="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlphaWebApp.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="portal">

	    <div class="logotype">
			@await Html.PartialAsync("Partials/Components/_Logotype")
        </div>

        <header class="topbar">
            @await Html.PartialAsync("Partials/Components/_Topbar")
        </header>

        <aside class="sidebar">
            @await Html.PartialAsync("Partials/Components/_NavLinks")
        </aside>

        <main class="main">
            @RenderBody()
        </main>

	@await Html.PartialAsync("_ModalScripts")
    </div>




    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js" integrity="sha512-7SRCYIJtR6F8ocwW7UxW6wGKqbSyqREDbfCORCbGLatU0iugBLwyOXpzhkPyHIFdBO0K2VCu57fvP2Twgx1o2A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>